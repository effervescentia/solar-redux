{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2015", "DOM", "ES2016.Array.Include"],
    "jsx": "react",
    "jsxFactory": "h",
    "declaration": false,
    "strict": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules", "dist"],
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}
