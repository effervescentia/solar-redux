{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2015", "dom", "es2016.array.include"],
    "types": ["node", "webpack-env"],
    "jsx": "react",
    "jsxFactory": "h",
    "skipLibCheck": true,
    "declaration": false,
    "strict": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist"],
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}
